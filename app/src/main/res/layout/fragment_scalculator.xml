<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#3F51B5"
        app:title="SCalculator"/>
    
    <TextView
        android:id="@+id/display_field"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:autoSizeTextType="uniform"
        android:textSize="50sp"
        android:text="0"
        android:background="@drawable/frame_style"/>

    <TextView
        android:id="@+id/result_field"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/display_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:autoSizeTextType="uniform"
        android:textSize="50sp"
        tools:text="0"
        android:background="@drawable/frame_style"/>

    <Button
        android:id="@+id/button_hist"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/result_field"
        app:layout_constraintStart_toStartOf="parent"
        android:text="hist"
        android:textSize="25sp"
        android:backgroundTint="#3F51B5"/>

    <Button
        android:id="@+id/button_m"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/result_field"
        app:layout_constraintStart_toEndOf="@id/button_hist"
        android:text=""
        android:textSize="30sp"
        android:backgroundTint="#3F51B5"
        />

    <Button
        android:id="@+id/button_c"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/result_field"
        app:layout_constraintStart_toEndOf="@id/button_m"
        android:text="C"
        android:textSize="30sp"
        android:backgroundTint="#E91E63"/>

    <Button
        android:id="@+id/button_del"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/result_field"
        app:layout_constraintStart_toEndOf="@id/button_c"
        android:text="Del"
        android:textSize="30sp"
        android:backgroundTint="#E91E63"/>

    <Button
        android:id="@+id/button_7"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/button_hist"
        app:layout_constraintStart_toStartOf="parent"
        android:text="7"
        android:textSize="30sp"
        android:backgroundTint="#009688"/>

    <Button
        android:id="@+id/button_8"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/button_m"
        app:layout_constraintStart_toEndOf="@id/button_7"
        android:text="8"
        android:textSize="30sp"
        android:backgroundTint="#009688"/>

    <Button
        android:id="@+id/button_9"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/button_c"
        app:layout_constraintStart_toEndOf="@id/button_8"
        android:text="9"
        android:textSize="30sp"
        android:backgroundTint="#009688"/>

    <Button
        android:id="@+id/button_div"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/button_del"
        app:layout_constraintStart_toEndOf="@id/button_9"
        android:text="/"
        android:textSize="30sp"
        android:backgroundTint="#3F51B5"/>

    <Button
        android:id="@+id/button_4"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/button_7"
        app:layout_constraintStart_toStartOf="parent"
        android:text="4"
        android:textSize="30sp"
        android:backgroundTint="#009688"/>

    <Button
        android:id="@+id/button_5"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/button_8"
        app:layout_constraintStart_toEndOf="@id/button_4"
        android:text="5"
        android:textSize="30sp"
        android:backgroundTint="#009688"/>

    <Button
        android:id="@+id/button_6"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/button_9"
        app:layout_constraintStart_toEndOf="@id/button_5"
        android:text="6"
        android:textSize="30sp"
        android:backgroundTint="#009688"/>

    <Button
        android:id="@+id/button_mult"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/button_div"
        app:layout_constraintStart_toEndOf="@id/button_6"
        android:text="*"
        android:textSize="30sp"
        android:backgroundTint="#3F51B5"/>

    <Button
        android:id="@+id/button_1"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/button_4"
        app:layout_constraintStart_toStartOf="parent"
        android:text="1"
        android:textSize="30sp"
        android:backgroundTint="#009688"/>

    <Button
        android:id="@+id/button_2"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/button_5"
        app:layout_constraintStart_toEndOf="@id/button_1"
        android:text="2"
        android:textSize="30sp"
        android:backgroundTint="#009688"/>

    <Button
        android:id="@+id/button_3"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/button_6"
        app:layout_constraintStart_toEndOf="@id/button_2"
        android:text="3"
        android:textSize="30sp"
        android:backgroundTint="#009688"/>

    <Button
        android:id="@+id/button_minus"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/button_mult"
        app:layout_constraintStart_toEndOf="@id/button_3"
        android:text="-"
        android:textSize="30sp"
        android:backgroundTint="#3F51B5"/>

    <Button
        android:id="@+id/button_0"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/button_1"
        app:layout_constraintStart_toStartOf="parent"
        android:text="0"
        android:textSize="30sp"
        android:backgroundTint="#009688"/>

    <Button
        android:id="@+id/button_dot"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/button_2"
        app:layout_constraintStart_toEndOf="@id/button_0"
        android:text="."
        android:textSize="30sp"
        android:backgroundTint="#009688"/>

    <Button
        android:id="@+id/button_equals"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/button_3"
        app:layout_constraintStart_toEndOf="@id/button_dot"
        android:text="="
        android:textSize="30sp"
        android:backgroundTint="#3F51B5"/>

    <Button
        android:id="@+id/button_plus"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/button_minus"
        app:layout_constraintStart_toEndOf="@id/button_equals"
        android:text="+"
        android:textSize="30sp"
        android:backgroundTint="#3F51B5"/>

</androidx.constraintlayout.widget.ConstraintLayout>